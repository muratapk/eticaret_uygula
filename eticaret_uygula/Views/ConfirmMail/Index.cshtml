@model eticaret_uygula.Models.ConfirmUser
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_homeLayout.cshtml";
}

<h1>Mail Onaylama Formu</h1>
<form method="post" asp-action="Index" asp-controller="ConfirmMail">
    <div class="form-group">
        <h2>Onay Formundaki Gönderilen Mail Adresiniz:@ViewBag.Email</h2>
        <input class="form-control" type="text" value="@ViewBag.Email" asp-for="Mail"/>
    </div>
    <div class="form-group">
        <h2>Onay Kodunuzu Girin</h2>
        <input type="text" class="form-control" asp-for="ConfirmCode" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Hesabı Onayla</button>
    </div>
</form>


